{
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    
  "files.associations": {
    "*.any": "c",
    "*.glsl": "c",
    "*.material": "csharp",
    "*.compositor": "jsonc",
    "*.particle": "c",
    "*.mat": "c",
    "*.car": "ini",
    "*.ini": "ruby",
    "*.layout": "xml"
  },
  "files.exclude": {
        ".vscode": false,
        "CMake/": true,
        "build/": true,
        "Dependencies/": true,
        //"**/Hlms/*": true,
        "bin*/": true,
        //"data/": true,
        "**/Plugins/": true,
        "**/*.bin": true,
        "**/*.so*": true,
        "**/*.cache": true,
        "**/*.zip": true,
    },
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled",
    // "cmake.configureArgs": [
    //   "-DBUILD_EDITOR=ON",
    // ],
    // "clangd.arguments": [
    //   "--checks='-*'",
    //   "--header-insertion=iwyu",
    // ],
    "python.pythonPath": "/usr/bin/python3",
    "editor.suggest.localityBonus": true,
    "editor.cursorWidth": 2,
}
